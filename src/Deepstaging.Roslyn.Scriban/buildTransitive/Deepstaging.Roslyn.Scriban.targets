<Project>
    <!--
        Auto-discovers Scriban templates in the consuming project's Templates/ directory
        and feeds them to source generators as AdditionalFiles.
        Consumers just create Templates/{ProjectPrefix}/{Name}.scriban-cs â€” no csproj edits needed.
    -->
    <ItemGroup>
        <AdditionalFiles Include="Templates/**/*.scriban-cs"
                         Condition="Exists('Templates')"/>
    </ItemGroup>
</Project>
