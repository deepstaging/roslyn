{
  "$schema": "http://json.schemastore.org/template",
  "author": "Deepstaging",
  "classifications": [
    "Roslyn",
    "Source Generator",
    "Analyzer",
    "CodeFix",
    "Library"
  ],
  "identity": "Deepstaging.RoslynKit",
  "name": "Deepstaging Roslyn Kit",
  "shortName": "roslynkit",
  "description": "A complete Roslyn project template with source generator, analyzer, and code fix using Deepstaging.Roslyn. Demonstrates the AutoNotify pattern for INotifyPropertyChanged.",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "sourceName": "Deepstaging.RoslynKit",
  "preferNameDirectory": true,
  "symbols": {
    "namespace": {
      "type": "parameter",
      "datatype": "string",
      "description": "The root namespace for the generated projects.",
      "defaultValue": "Deepstaging.RoslynKit",
      "replaces": "Deepstaging.RoslynKit"
    },
    "authorName": {
      "type": "parameter",
      "datatype": "string",
      "description": "The author name for package metadata.",
      "defaultValue": "Deepstaging",
      "replaces": "{{AuthorName}}"
    },
    "includeRuntime": {
      "type": "parameter",
      "datatype": "bool",
      "description": "Include a Runtime project with base classes (e.g., ObservableObject) for generated code.",
      "defaultValue": "false",
      "displayName": "Include Runtime project"
    },
    "satellitePrefix": {
      "type": "generated",
      "generator": "regex",
      "datatype": "string",
      "parameters": {
        "source": "namespace",
        "steps": [
          { "regex": "\\.", "replacement": "" }
        ]
      },
      "replaces": "DeepstagingRoslynKit"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            "**/artifacts/**",
            "**/.git/**",
            "**/.idea/**",
            "**/.vs/**",
            "**/bin/**",
            "**/obj/**",
            "**/*.user",
            "**/samples/**",
            "**/site/**"
          ]
        },
        {
          "condition": "(!includeRuntime)",
          "exclude": [
            "src/Deepstaging.RoslynKit.Runtime/**",
            "**/AutoNotifyGeneratorTests.SnapshotRuntime.verified.txt"
          ]
        },
        {
          "condition": "(includeRuntime)",
          "exclude": [
            "**/AutoNotifyGeneratorTests.Snapshot.verified.txt"
          ]
        }
      ]
    }
  ],
  "postActions": [
    {
      "condition": "(OS != \"Windows_NT\")",
      "description": "Make build scripts executable",
      "manualInstructions": [
        {
          "text": "Run 'chmod +x build/*.sh'"
        }
      ],
      "actionId": "cb9a6cf3-4f5c-4860-b9d2-03a574959774",
      "args": {
        "+x": "build/*.sh"
      },
      "continueOnError": true
    }
  ]
}
