<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net10.0</TargetFramework>
        <IsPackable>false</IsPackable>
        <!-- Suppress CS1591 for sample project (no docs needed) -->
        <NoWarn>$(NoWarn);CS1591</NoWarn>
        <!-- Emit generated files for debugging -->
        <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
        <CompilerGeneratedFilesOutputPath>Generated</CompilerGeneratedFilesOutputPath>
    </PropertyGroup>
    
    <!-- Exclude generated files from compilation to avoid duplicates -->
    <ItemGroup>
        <Compile Remove="Generated/**/*.cs" />
    </ItemGroup>

    <!-- 
        Reference RoslynKit projects as analyzers.
        Note: During development with project references, analyzer dependencies need to be explicitly
        included. When using the published NuGet packages, dependencies are bundled automatically.
    -->
    <ItemGroup>
        <!-- Runtime reference to attributes -->
        <ProjectReference Include="..\..\src\Deepstaging.RoslynKit\Deepstaging.RoslynKit.csproj" />
    </ItemGroup>

    <!-- Analyzer project references with their dependencies -->
    <ItemGroup>
        <!-- Dependency: Deepstaging.Roslyn (needed by all analyzers/generators) -->
        <PackageReference Include="Deepstaging.Roslyn" GeneratePathProperty="true" PrivateAssets="all" />
        
        <!-- Analyzer projects -->
        <ProjectReference Include="..\..\src\Deepstaging.RoslynKit.Projection\Deepstaging.RoslynKit.Projection.csproj" 
                          OutputItemType="Analyzer" 
                          ReferenceOutputAssembly="false" />
        <ProjectReference Include="..\..\src\Deepstaging.RoslynKit.Generators\Deepstaging.RoslynKit.Generators.csproj" 
                          OutputItemType="Analyzer" 
                          ReferenceOutputAssembly="false" />
        <ProjectReference Include="..\..\src\Deepstaging.RoslynKit.Analyzers\Deepstaging.RoslynKit.Analyzers.csproj" 
                          OutputItemType="Analyzer" 
                          ReferenceOutputAssembly="false" />
        <ProjectReference Include="..\..\src\Deepstaging.RoslynKit.CodeFixes\Deepstaging.RoslynKit.CodeFixes.csproj" 
                          OutputItemType="Analyzer" 
                          ReferenceOutputAssembly="false" />
    </ItemGroup>
    
    <!-- 
        Include analyzer dependencies explicitly.
        This is only needed for project references during development.
        Published NuGet packages bundle these dependencies automatically.
    -->
    <ItemGroup>
        <Analyzer Include="$(PkgDeepstaging_Roslyn)/lib/netstandard2.0/Deepstaging.Roslyn.dll" />
        <Analyzer Include="..\..\artifacts\bin\Deepstaging.RoslynKit\Debug\netstandard2.0\Deepstaging.RoslynKit.dll" />
        <Analyzer Include="..\..\artifacts\bin\Deepstaging.RoslynKit.Projection\Debug\netstandard2.0\Deepstaging.RoslynKit.Projection.dll" />
    </ItemGroup>

</Project>
