<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net10.0</TargetFramework>
        <IsPackable>false</IsPackable>
        <IsTestProject>true</IsTestProject>
        <!-- Suppress CS1591 for test project (no docs needed) -->
        <NoWarn>$(NoWarn);CS1591</NoWarn>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Deepstaging.Roslyn"/>
        <PackageReference Include="TUnit"/>
        <PackageReference Include="TUnit.Engine"/>
        <PackageReference Include="Basic.Reference.Assemblies.Net100"/>
        <!-- Scriban needed for generator template rendering at test time -->
        <PackageReference Include="Scriban"/>
        <PackageReference Include="Deepstaging.Roslyn.Testing"/>
    </ItemGroup>

    <!-- Reference RoslynKit projects -->
    <ItemGroup>
        <ProjectReference Include="..\Deepstaging.RoslynKit\Deepstaging.RoslynKit.csproj"/>
        <ProjectReference Include="..\Deepstaging.RoslynKit.Analyzers\Deepstaging.RoslynKit.Analyzers.csproj"/>
        <ProjectReference Include="..\Deepstaging.RoslynKit.CodeFixes\Deepstaging.RoslynKit.CodeFixes.csproj"/>
        <ProjectReference Include="..\Deepstaging.RoslynKit.Generators\Deepstaging.RoslynKit.Generators.csproj"/>
    </ItemGroup>

</Project>
