<Project>
  <!-- 
    Build.SourceLink.props
    
    Configures debugging symbols, documentation generation, and SourceLink integration.
    
    Imported by: Directory.Build.props
  -->
  
  <PropertyGroup>
    <!-- 
      GenerateDocumentationFile: Creates XML docs for IntelliSense
      Warnings about missing /// comments are suppressed via .editorconfig
    -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    
    <!-- 
      SourceLink: Embeds source code links in symbols for debugging
      https://github.com/dotnet/sourcelink
    -->
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <EmbedAllSources>true</EmbedAllSources>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    
    <!-- 
      Embedded PDB: Includes debugging symbols directly in the DLL
      so consumers can step into source without configuring a symbol server.
      Combined with EmbedAllSources, this provides full source-level debugging.
    -->
    <DebugType>embedded</DebugType>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" PrivateAssets="all" />
  </ItemGroup>
</Project>
