<Project>
  <!-- 
    Build.Packaging.props
    
    Defines NuGet package metadata, versioning, and packaging behavior.
    
    Imported by: Directory.Build.props
  -->

  <PropertyGroup>
    <!-- 
      IsPackable: Controls whether 'dotnet pack' creates a NuGet package
      Default is false - projects must explicitly opt-in to being packable
      
      To make a project packable, add this to its .csproj:
      <IsPackable>true</IsPackable>
    -->
    <IsPackable>false</IsPackable>

    <!-- ========================================
         PACKAGE METADATA (used by packable projects)
         ======================================== -->

    <!-- TODO: Update these values for your project -->
    <Authors>Christopher Martin</Authors>
    <Company>Deepstaging</Company>
    <Copyright>Copyright Â© Deepstaging</Copyright>
    <Description>Roslyn-based code generation toolkit for C#/.NET</Description>

    <!-- 
      PackageLicenseExpression: SPDX license identifier
      Common values: MIT, Apache-2.0, GPL-3.0, BSD-3-Clause, RPL-1.5
      https://spdx.org/licenses/
    -->
    <PackageLicenseExpression>RPL-1.5</PackageLicenseExpression>

    <PackageProjectUrl>https://deepstaging.github.io/roslyn</PackageProjectUrl>
    <RepositoryUrl>https://github.com/deepstaging/roslyn</RepositoryUrl>
    <RepositoryType>git</RepositoryType>

    <!-- 
      Package assets (README and icon)
      These files are included in the NuGet package for display on nuget.org
    -->
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageIcon>icon.png</PackageIcon>

    <!-- 
      PackageTags: Semicolon-separated tags for discoverability on nuget.org
    -->
    <PackageTags>roslyn;source-generator;analyzer;codefix</PackageTags>

    <!-- ========================================
         VERSIONING
         ======================================== -->

    <!-- 
      VersionPrefix: Base version for your package (SemVer format: major.minor.patch)
      VersionSuffix: Prerelease suffix (e.g., alpha.1, beta.1, rc.1)
      
      pack.sh derives the suffix automatically:
        Local:  local.YYYYMMDDHHMMSS  (e.g., 1.0.0-local.20260214015000)
        CI:     dev.N                  (e.g., 1.0.0-dev.75)
        Release: no suffix             (e.g., 1.0.0, via git tag)
      
      Update VersionPrefix when you want to release a new major/minor/patch version.
    -->
    <VersionPrefix>1.0.0</VersionPrefix>
    <VersionSuffix>alpha.1</VersionSuffix>
  </PropertyGroup>

  <!-- Include per-project icon.png in packages (each packable project has its own icon) -->
  <ItemGroup>
    <None Include="$(MSBuildProjectDirectory)/icon.png" Pack="true" PackagePath="\" Visible="false"
          Condition="Exists('$(MSBuildProjectDirectory)/icon.png')" />
  </ItemGroup>
</Project>