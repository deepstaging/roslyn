<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <clear />
    <!-- Local source for development; ignored if missing -->
    <add key="Deepstaging.Local" value="../../artifacts/packages" />
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" />
  </packageSources>
  <packageSourceMapping>
    <packageSource key="Deepstaging.Local">
      <package pattern="Deepstaging.*" />
    </packageSource>
    <packageSource key="nuget.org">
      <package pattern="*" />
      <package pattern="Deepstaging.*" />
    </packageSource>
  </packageSourceMapping>
  <config>
    <!-- Continue restore even if a source is unreachable (enables offline/CI) -->
    <add key="ignoreFailedSources" value="true" />
  </config>
</configuration>
